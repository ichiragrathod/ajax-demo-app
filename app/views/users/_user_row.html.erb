<tr id="userRow_<%= user.id%>">
  <td><%= user.id%> </td>
  <td><%= user.name%> </td>
  <td><%= user.email%> </td>
  <td><%= user.address%> </td>
  <td><%= user.contact%> </td>
  <td> 
    <!-- Example single danger button -->
    <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Action
      </button>
      <div class="dropdown-menu">
        <%= link_to 'Show', user_path(user.id), class:"dropdown-item", data:{ toggle:'modal', target:"#showUserModal", remote:true}%>
        <%= link_to 'Edit', edit_user_path(user.id), class:"dropdown-item", data:{ toggle:'modal', target:"#editUserModal", remote:true} %>
        <%= button_to 'Delete', user_path(user.id),method: :delete, data: { confirm: "Are you sure to delete this data?", remote: true }, class:"dropdown-item" %>
      </div>
    </div>
  </td>
</tr>
